{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react-jsx",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./packages",
    "paths": {
      "@kaiju-ui/button": ["button/src"],
      "@kaiju-ui/input": ["input/src"],
      "@kaiju-ui/tabs": ["tabs/src"],
      "@kaiju-ui/flex": ["flex/src"],
      "@kaiju-ui/toast": ["toast/src"],
      "@kaiju-ui/text": ["text/src"],
      "@kaiju-ui/tooltip": ["tooltip/src"],
      "@kaiju-ui/*": ["*/src"]
    }
  }
}
